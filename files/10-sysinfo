red="\e[31m"
default="\e[39m"
white="\e[97m"
green="\e[32m"

ipv4=`hostname -I | awk '{print $1}'`
ipv6=`hostname -I | awk '{print $2}'`

date=`date`
load=`cat /proc/loadavg | awk '{print $1}'`
memory_usage=`free -m | awk '/Mem:/ { total=$2; used=$3 } END { printf("%3.1f%%", used/total*100)}'`

uptime=`uptime | grep -ohe 'up .*' | sed 's/,/\ hours/g' | awk '{ printf $2" "$3 }'`
processes=`ps aux | wc -l`

root_usage=`df -h / | awk '/\// {print $(NF-1)}'`
root_free_space=`df -h / | awk '/\// {print $(NF-4)}'`
 
printf "${green}System information as of: ${white}$date \n"
echo
printf "${red}IPv4 Address${white}:${default}\t%s\t${red}IPv6 Address${white}:${default}\t%s\n" $ipv4 $ipv6
printf "${red}System Load${white}:${default}\t%s\t${red}Memory Usage${white}:${default}\t%s\n" $load $memory_usage
printf "${red}Processes${white}:${default}\t%s\t${red}System Uptime${white}:${default}\t%s\n" $processes $uptime
echo
printf "${green}Disk information as of: ${white}$date \n"
echo
printf "${red}Usage On /${white}:${default}\t\t%s\t${red}Free On /${white}:${default}\t\t%s\n" $root_usage $root_free_space
echo